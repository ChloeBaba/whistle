<div>
  <div id="tripMap" style="width: 100%; height: 700px;"></div>
  <div hidden="true">
    <p id="start_lat" ><%= @trip.start_lat %></p>
    <p id="start_long" ><%= @trip.start_long %></p>
    <p id="end_lat" ><%= @trip.end_lat %></p>
    <p id="end_long" ><%= @trip.end_long %></p>
  </div>
  <%= link_to "Share my location", trip_alerts_path(@trip, kind: "share"), method: :post, class: "share" %>
</div>


<%= content_for :after_js do %>
  <%= javascript_pack_tag "map" %>
  <%= javascript_pack_tag "show_route" %>
<% end %>
