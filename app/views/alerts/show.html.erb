<div>
  <div id="alertMap" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>"></div>
  <div hidden="true">
    <p id="start_lat" ><%= @alert.trip.start_lat %></p>
    <p id="start_long" ><%= @alert.trip.start_long %></p>
    <p id="end_lat" ><%= @alert.trip.end_lat %></p>
    <p id="end_long" ><%= @alert.trip.end_long %></p>
    <p id="current_lat" ></p>
    <p id="current_long" ></p>
    <p id="alert_kind"><%= @alert.kind %></p>
  </div>
  <%= form_for(:alert, url: trip_alerts_path(@alert.trip, kind: "whistle"),html: { class: "alert-whistle-form" }) do |f| %>
    <%= f.submit "Whistle", class: 'whistle' %>
  <% end %>
 <%= form_for(:alert, url: trip_alerts_path(@alert.trip, kind: "safe"),html: { class: "safe-form" }) do |f| %>
   <%= f.submit "Mark as safe", class: 'safe' %>
 <% end %>
  <div id="address"></div>
</div>
