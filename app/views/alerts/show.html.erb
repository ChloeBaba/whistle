<div>
  <div id="alertMap" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>"></div>
  <div hidden="true">
    <p id="start_lat" ><%= @alert.trip.start_lat %></p>
    <p id="start_long" ><%= @alert.trip.start_long %></p>
    <p id="end_lat" ><%= @alert.trip.end_lat %></p>
    <p id="end_long" ><%= @alert.trip.end_long %></p>
    <p id="current_lat" ></p>
    <p id="current_long" ></p>
    <p id="alert_kind"><%= @alert.kind %></p>
  </div>
  <%= link_to "Whistle", trip_alerts_path(@alert.trip, kind: "whistle"), method: :post, class: "whistle" %>
  <%= link_to "Mark as Safe", trip_alerts_path(@alert.trip, kind: "safe"), method: :post, class: "safe" %>
  <div id="address"></div>
</div>
